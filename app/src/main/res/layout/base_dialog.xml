<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_left_dialog"
    android:paddingRight="@dimen/padding_left_dialog">

    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="#ffff00"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_dialog_title"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="@dimen/size_title"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dddddd" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/text_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="#ffffff"
            android:gravity="left"
            android:singleLine="false"
            android:textColor="#000000"
            android:textSize="@dimen/size_normal_text" />
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="15dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_dialog_button"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_cancel_state"
            android:textColor="#000000"
            android:textSize="@dimen/size_server_info"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_ok"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_dialog_button"
            android:layout_weight="1"
            android:background="@drawable/button_ok_state"
            android:textColor="#000000"
            android:textSize="@dimen/size_server_info"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
