<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="csc1304.gr13.retailmanagercsc.stocktables.AddStockItemsFrg">

    <!-- TODO: Update blank fragment layout -->

    <com.google.android.material.tabs.TabLayout
        app:tabBackground="@drawable/after_tab_select"
        app:tabTextColor="#5e5c5c"
        app:tabSelectedTextColor="#5e5c5c"
        app:tabIndicatorColor="#f2f1f1"
        android:id="@+id/tab_layout_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:layout_gravity="center"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#efefef"/>


    <androidx.viewpager.widget.ViewPager
        android:layout_weight="4"
        android:id="@+id/pager_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/tab_layout"/>
</LinearLayout>
